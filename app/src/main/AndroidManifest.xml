<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cathy.sdapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SecondActivity" />
        <activity android:name=".CategoryOneActivity" />
        <activity android:name=".CategoryTwoActivity" />
        <activity android:name=".CategoryThreeActivity" />
        <activity android:name=".CategoryFourActivity" />
        <activity android:name=".CategoryFiveActivity" />
        <activity android:name=".CategorySixActivity" />
        <activity android:name=".CategorySevenActivity" />
        <activity android:name=".CategoryEightActivity" />
        <activity
            android:name=".QuizActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_quiz"
            android:parentActivityName=".SecondActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cathy.sdapp.SecondActivity" />
        </activity>
    </application>

</manifest>